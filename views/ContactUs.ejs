<body>
   <%- include('includes/navigation.ejs') %>
   <main>
    <form class="product-form" action="/success" method="POST">
        <h2>Book A call</h2>
        <p>Book a call slot and representative will call u within 1hr of selected time</p>
        <div class="form-control">
            <label for="title">Name</label>
            <input type="text" name="title" id="title" /required>
        </div>
        <div class="form-control">
            <label for="title">Email</label>
            <input type="text" name="title" id="title" /required>
        </div>
        <div class="form-control">
            <label for="title">Phone</label>
            <input type="text" name="title" id="title">
        </div>
        <div class="form-control">
            <label for="title">Time for call:</label>
            <input type="date" name="title" id="title">
            <input type="time" name="title" id="title">
        </div>
        
        <button title="submit" ><a href="http:/Success">Get a call</a></button>
    </form>
</main>

